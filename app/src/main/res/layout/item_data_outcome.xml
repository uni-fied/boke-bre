<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardItemDataOutCome"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        app:cardMaxElevation="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="15dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txTglJam_Out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02 June 2022 10:45:22 WIB"
                        android:textSize="5pt"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/txKategori_Out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Parkir @ Indo, Alfamart"
                        android:textColor="@color/primary_color" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:background="#C1B3B3" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txSisaPemasukan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Sisa Pemasukan"
                        android:textStyle="italic"
                        android:textSize="5pt"
                        android:textColor="#00BCD4" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txDataPengeluaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Jumlah Pengeluaran"
                        android:textStyle="italic"
                        android:textSize="5pt"
                        android:textColor="#81FF0000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1.3"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Pengeluaran"
                        android:textSize="5pt"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/txJmlRupiah_Out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Rp. 4.000.00-,"
                        android:textColor="@color/primary_color" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:background="#C1B3B3" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txJmlRupiahSisa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="*) Coming soon"
                        android:textStyle="italic"
                        android:textSize="5pt"
                        android:textColor="#00BCD4" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txJmlDataPengeluaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="*) Coming soon"
                        android:textStyle="italic"
                        android:textSize="5pt"
                        android:textColor="#81FF0000" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="1.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="15dp"
                android:background="#C1B3B3" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:gravity="center_vertical|left"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgUser_Out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/man" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txReasonDatabyUser_Out"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:textColor="#000"
                    android:text="Untuk bayar parkir di indomart dan alfamart, masing2 2000 belanja popok dede oleh Fithri Febiyani Yunus"
                    android:textSize="5pt"
                    android:textStyle="italic" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1.5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="7dp"
                android:background="#C1B3B3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:gravity="center_vertical|left"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/income" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtSumberIncomefrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:textColor="#615F5F"
                    android:text="Sumber Pemasukan : Gaji Mei 2022"
                    android:textSize="5pt"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>